@model StokCore.EntityLayer.Concrete.AppUser
@using StokCore.WebUI.Resources
@inject LanguageService ShareLocalizer
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ShareLocalizer.GetLocalizeHTML("LoginTitle")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-5 col-sm-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h3 class="card-title mb-4 text-center">@ShareLocalizer.GetLocalizeHTML("LoginTitle")</h3>

                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Message</div>
                        }

                        <form asp-action="Login" method="post">
                            <div class="mb-3">
                                <label asp-for="UserName" class="form-label">@ShareLocalizer.GetLocalizeHTML("UserNameLabel")</label>
                                <input asp-for="UserName" class="form-control" placeholder="@ShareLocalizer.GetLocalizeHTML("UserNamePlaceholder")" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">@ShareLocalizer.GetLocalizeHTML("PasswordLabel")</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="@ShareLocalizer.GetLocalizeHTML("PasswordPlaceholder")" />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">@ShareLocalizer.GetLocalizeHTML("LoginButton")</button>
                        </form>

                        <div class="mt-3 text-center">
                            <a asp-action="Register">@ShareLocalizer.GetLocalizeHTML("RegisterLinkText")</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
